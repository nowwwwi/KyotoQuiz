@model KyotoQuiz.Models.QuizOption

@{
    ViewData["Title"] = "Setting";
    ViewData["SelectAll"] = "指定しない";
}

<h1>@ViewBag.Title</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRepeatablly" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Questions" class="control-label"></label>
                <input asp-for="Questions" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="ImplementedId" class="control-label"></label>
                <select asp-for="ImplementedId" class="form-control" asp-items="ViewBag.ImplementedId">
                    <option value="-1">@ViewBag.SelectAll</option>
                </select>

            </div>
            <div class="form-group">
                <label asp-for="GenreId" class="control-label"></label>
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId">
                    <option value="-1">@ViewBag.SelectAll</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <select asp-for="Grade" class="form-control" asp-items="ViewBag.Grade">
                    <option value="-1">@ViewBag.SelectAll</option>
                </select>
            </div>

            <br>

            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>